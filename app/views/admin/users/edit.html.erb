<div class="has-text-centered">
  <h1 class="title">詳細</h1>
  <%= form_with model: @user, url: user_path(@user), local: true, method: :patch do |f| %>
    <div class="field ">
      <%= f.label :name, '名前', class: 'label has-text-left' %>
      <%= f.text_field :name, class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :email, 'メールアドレス', class: 'label has-text-left' %>
      <%= f.email_field :email, class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :password, 'パスワード', class: 'label has-text-left' %>
      <%= f.password_field :password, class: 'input' %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'パスワード確認', class: 'label has-text-left' %>
      <%= f.password_field :password_confirmation, class: 'input' %>
    </div>
    <div class="control">
      <%= f.submit "更新", class: 'button is-info is-rounded is-medium mt-5' %>
    </div>
  <% end %>
</div>